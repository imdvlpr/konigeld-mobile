<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkout.MainMenu2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <SearchView
            android:id="@+id/searchSale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:searchIcon="@drawable/search"
            android:searchHintIcon="@drawable/search"
            android:background="@drawable/borderbottomgap"
            android:backgroundTint="@color/colorPrimary"
            />

        <Button
            android:id="@+id/viewproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mainbutton"
            android:fontFamily="@font/dosisthicc"
            android:textColor="@color/colorSecondaryText"
            android:text="VIEW PRODUCTS"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchSale"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/viewdisc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mainbutton"
            android:fontFamily="@font/dosisthicc"
            android:textColor="@color/colorSecondaryText"
            android:text="VIEW DISCOUNTS"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchSale"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/viewcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mainbutton"
            android:fontFamily="@font/dosisthicc"
            android:textColor="@color/colorSecondaryText"
            android:text="VIEW CATEGORIES"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchSale"
            />

        <TextView
            android:id="@+id/discounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/dosisthicc"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:text="Discounts"
            android:background="@drawable/borderbottomgap"
            android:drawableRight="@drawable/rightbtn"
            android:padding="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewcategory"
        />

        <TextView
            android:id="@+id/allitems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/dosisthicc"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:text="All Products"
            android:background="@drawable/borderbottomgap"
            android:drawableRight="@drawable/rightbtn"
            android:padding="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewcategory"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>